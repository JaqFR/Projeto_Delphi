program SistemaDiamante;

uses
  SysUtils,
  Forms,
  UMenuPrin in 'UMenuPrin.pas' {FrmMenuPrin},
  USplash in 'USplash.pas' {FrmSplash},
  Unit1 in 'Unit1.pas' {FrmCadCli},
  UDM in 'UDM.pas' {DM: TDataModule},
  UDM_Cliente in 'UDM_Cliente.pas' {DM_Cliente: TDataModule},
  UCadCliente in 'UCadCliente.pas' {FrmCadCliente},
  UDM_Veiculo in 'UDM_Veiculo.pas' {DM_Veiculo: TDataModule},
  UFuncoes in 'UFuncoes.pas';

{$R *.res}

begin

  FrmSplash:= TFrmSplash.Create(Application);
  FrmSplash.Refresh;
  Sleep(2000);
  FrmSplash.Release;
  FrmSplash.Free;
  FrmSplash:= nil;

  try
  Application.Initialize;
  Application.MainFormOnTaskbar := True;
  Application.CreateForm(TFrmMenuPrin, FrmMenuPrin);
  Application.CreateForm(TFrmCadCli, FrmCadCli);
  Application.CreateForm(TDM, DM);
  Application.CreateForm(TDM_Cliente, DM_Cliente);
  Application.CreateForm(TFrmCadCliente, FrmCadCliente);
  Application.CreateForm(TDM_Veiculo, DM_Veiculo);
  finally
    FrmSplash.Free;
    FrmSplash:= nil;
  end;

  Application.Run;
end.
